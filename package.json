{
  "name": "salesforce-docs-mcp",
  "version": "1.0.0",
  "description": "MCP server for Salesforce Developer Documentation - Local-first full-text search across 360 PDF documents",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "salesforce-docs-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "build-index": "tsx scripts/build-index.ts",
    "test-search": "tsx scripts/test-search.ts",
    "test-llm-judge": "tsx scripts/test-llm-judge.ts",
    "test-all": "npm run test-search && npm run test-llm-judge",
    "prepare": "npm run build",
    "postinstall": "node scripts/postinstall.js || echo 'Skipping postinstall'"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "salesforce",
    "documentation",
    "search",
    "apex",
    "lwc",
    "rest-api",
    "ai",
    "copilot",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SalesforceDiariesBySanket/salesforce-docs-mcp"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "data/*.db",
    "scripts/postinstall.js"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "sql.js": "^1.10.0",
    "lru-cache": "^10.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "pdf-parse": "^1.1.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
